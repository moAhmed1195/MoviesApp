@model Movie

@{
	ViewData["Title"] = Model.Name;
}

<div class="row mt-60-px justify-content-between">
	<div class="col-md-4">
		<img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Name" />
		
	</div>
	<div class="col-md-7">
		<div class="d-flex justify-content-between mb-3">
		<h3>@Model.Name</h3>
			<span class="mt-2">
				<i class="bi bi-star-fill text-warning"></i>
				<span class="text-muted">@Model.Rate.ToString("0.0")</span>
			</span>
		</div>

		<span class="text-muted me-3">
			<i class="bi bi-calendar-week"></i>
			@Model.Year
		</span>

		<span class="text-muted">
			<i class="bi bi-film"></i>
			@Model.Genre.Name
		</span>
		<p class="text-justify mt-3">@Model.StoryLine</p>
		
	</div>
</div>
